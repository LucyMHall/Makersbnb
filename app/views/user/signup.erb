<div class="description">

  <p><h1>Sign up to Makers BnB</h1></p>

  <form>
    <div class="form-group">
      <label for="exampleInputName1" class="text-white bg-dark">Name
      </label>
      <input type="name" class="form-control" id="exampleInputName" aria-describedby="nameHelp"
        placeholder="Enter your name">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1" class="text-white bg-dark">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
        placeholder="Enter your email">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1" class="text-white bg-dark">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    
    <a href="/user/login" class="btn btn-danger" role="button">Submit</a>
  </form>
</div>





